{
  "name": "Auto IP Proxy Checker",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Troca de IP e mostra automaticamente o IP p√∫blico em um pop-up.",
  "permissions": [
    "proxy",
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "unlimitedStorage",
    "<all_urls>"
  ],
  "host_permissions": [
    "https://api.ipify.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
